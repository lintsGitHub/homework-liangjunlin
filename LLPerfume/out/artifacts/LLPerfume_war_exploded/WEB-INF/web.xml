<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>PerfumeShow</servlet-name>
        <servlet-class>Server.ShowAllPerfume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfumeShow</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PerfumeAdd</servlet-name>
        <servlet-class>Server.AddPerfume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfumeAdd</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Perfume</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Perfume</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>del</servlet-name>
        <servlet-class>Server.DelPerfume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>del</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>Server.UpdatePerfume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>coding</filter-name>
        <filter-class>Server.CodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>coding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>select</servlet-name>
        <servlet-class>Server.SelePerfume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>select</servlet-name>
        <url-pattern>/sele</url-pattern>
    </servlet-mapping>
</web-app>